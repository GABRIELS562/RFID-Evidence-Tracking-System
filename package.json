{
  "name": "rfid-inventory-tracking",
  "version": "1.0.0",
  "description": "RFID Inventory Tracking System - Real-time Asset Management",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:server": "PORT=3001 ts-node-dev --respawn --project tsconfig.server.json src/server.ts",
    "dev:frontend": "PORT=3005 react-app-rewired start",
    "build": "npm run build:server && npm run build:frontend",
    "build:server": "tsc",
    "build:frontend": "react-app-rewired build",
    "db:migrate": "ts-node src/database/migrate.ts",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate",
    "db:create": "createdb rfid_tracking || true",
    "db:drop": "dropdb rfid_tracking --if-exists",
    "db:refresh": "node scripts/db-refresh.js",
    "db:refresh:force": "bash scripts/refresh-database.sh",
    "db:seed": "psql -U user -d rfid_tracking -f src/database/migrations/002_seed_data.sql",
    "db:test": "npx ts-node src/tests/database-test.ts",
    "db:optimize": "psql -d rfid_tracking -f src/database/migrations/999_optimize_performance.sql",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --testPathPattern=__tests__/.*\\.test\\.(ts|js)$ --passWithNoTests",
    "test:integration": "jest --testPathPattern=__tests__/integration/.*\\.test\\.(ts|js)$ --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:coverage:report": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:performance": "k6 run performance/load-test.js",
    "test:security": "k6 run performance/security-test.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "setup": "npm run db:create && npm run db:migrate",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production",
    "deploy:rollback": "./scripts/deploy.sh rollback",
    "backup:db": "./scripts/backup-db.sh",
    "backup:app": "./scripts/backup-app.sh",
    "health:check": "curl -f http://localhost:3001/health && curl -f http://localhost:3000/health",
    "logs:api": "tail -f /var/log/rfid-tracking/api.log",
    "logs:error": "tail -f /var/log/rfid-tracking/error.log",
    "docs:generate": "typedoc --out docs/api src/",
    "audit:security": "npm audit && snyk test",
    "audit:deps": "npm audit",
    "clean": "rm -rf dist/ build/ node_modules/.cache/",
    "prebuild": "npm run clean && npm run lint && npm run typecheck",
    "postinstall": "echo 'Installation complete'",
    "validate": "npm run lint && npm run typecheck && npm run test:unit"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.6",
    "@react-three/drei": "^9.88.13",
    "@react-three/fiber": "^8.15.12",
    "@sendgrid/mail": "^8.1.5",
